{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "rootDir": "./",
    "allowJs": true,
    "declaration": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules", "lib"],
  "files": ["index.ts"]
}
